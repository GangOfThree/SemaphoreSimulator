<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        
        <title>{% block title %}Semaphore Simulator{% endblock %}</title>
        
        <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="{{ asset('lib/materialize/css/materialize.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/base.css')}}">
        
        
        <script type="text/javascript" src="{{ asset('lib/jquery/jquery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('lib/materialize/js/materialize.min.js') }}"></script>

        {% block stylesheets %}{% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>

    <body>

        <ul class="side-nav fixed">
            <li class="logo"><img src="{{ asset('img/logo2.png') }}" class="responsive-img"></li>
            {% if running is not defined %}
                <li class="teal"><a href="{{ path('semaforo_index') }}">Iniciar Simulación</a></li>
            {% else %}
                <li class="red lighten-2"><a href="{{ path('homepage') }}">Detener Simulación</a></li>
            {% endif %}
            <li><a href="{{ path('semaforo_new') }}">Crear Semaforo</a></li>
            <li><a href="{{ path('semaforo_list_JSON') }}">JSON Semaforos</a></li>
        </ul>

        <main>
            <div class="card-panel">
                {% block body %}{% endblock %}
            </div>
        </main>   


        {% block javascripts %}{% endblock %}

    </body>
</html>
